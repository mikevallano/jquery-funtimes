<p id="notice"><%= notice %></p>

<h1>Listing Dogs</h1>

<div class="dog-table-container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @dogs.each do |dog| %>
        <%= render 'dog_row', dog: dog %>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= render 'form' %>

<%= link_to 'New Dog', new_dog_path, remote: true, class: 'btn btn-default', id: 'new-dog-btn' %>
