<p class="hidden notice-msg"><%= notice %></p>
<p class="hidden alert-msg"><%= alert %></p>

<h1 id="dog-header">Listing Dogs</h1>

<%= link_to 'New Dog', new_dog_path, remote: true, class: 'btn btn-primary', id: 'new-dog-btn' %>

<div class="dog-table-container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @dogs.each do |dog| %>
        <%= render 'dog_row', dog: dog %>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= render 'form' %>
