<p class="hidden" id="notice"><%= notice %></p>
<p class="hidden" id="alert-msg"><%= alert %></p>

<%= render 'shared/loading_overlay' %>

<h1 id="critter-header">Page of Critters</h1>
<%= link_to 'New Critter', '', data: {toggle: 'modal', target: '#crit-form-modal'}, class: 'btn btn-primary new-crit-btn' %>

<table class="table table-striped" id="critter-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody id="crit-table-body">
    <!-- when the page loads, for each critter
    append a row with the critter info -->
  </tbody>
</table>

<%= render 'form' %>
