<div class="modal fade critter-modal-form" id="crit-form-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
        <div class="modal-body">
          <% url = @critter ? critter_path(@critter, format: :json) : critters_path(format: :json) %>
          <%= form_for @critter||Critter.new, url: url, remote: true do |f| %>
          <%#= form_for @critter, remote: true, format: :json do |f| %>

            <div class="field">
              <%= f.label :name %><br>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="field">
              <%= f.label :description %><br>
              <%= f.text_field :description, class: 'form-control' %>
            </div>
            <div class="field">
              <%= f.label :collar %>
              <%= f.check_box :collar %>
            </div>
            <div class="actions">
              <%= binding.pry %>
              <%= f.submit (@critter.present? ? 'Update' : 'Create')+' Critter', class: 'btn btn-primary btn-success', id: 'crit-form-submit-btn' %>
            </div>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default modal-close-btn" data-dismiss="modal">Cancel</button>
        </div>
    </div>
  </div>
</div>
